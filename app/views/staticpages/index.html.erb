<div id="page-container">
  <div class="media-container">
    <section class="site-section site-section-light site-section-top">
      <div class="container text-center">
        <h1 class="animation-slideDown">
          <strong><%= t "welcome" %></strong>
        </h1>
        <h2 class="h3 animation-slideUp hidden-xs">
          <%= t "explore_product" %>
        </h2>
      </div>
    </section>
    <%= image_tag "store_home.jpg", class: "media-image animation-pulseSlow" %>
  </div>
  <section class="site-content site-section">
    <div class="container">
      <div class="site-block text-center">
        <div class="btn-group portfolio-filter">
          <%= link_to t("all"), "#", class: "btn btn-primary active",
            "data-category": "all" %>
          <%= link_to t("category1"), "#", class: "btn btn-primary" %>
          <%= link_to t("category2"), "#", class: "btn btn-primary" %>
          <%= link_to t("category3"), "#", class: "btn btn-primary" %>
        </div>
      </div>
      <div class="site-block">
        <form action="" method="post">
          <div class="input-group input-group-lg">
            <input type="text" id="ecom-search" name="ecom-search" class="form-control text-center"
              placeholder="<%= t "search_shop" %>">
            <div class="input-group-btn">
              <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
            </div>
          </div>
        </form>
      </div>
      <h2 class="site-heading">
        <strong><%= t "best" %></strong>
        <%= t "coffee_shop" %>
      </h2>
      <hr>
      <div class="row store-items">
        <div class="col-md-4" data-toggle="animation-appear"
          data-animation-class="animation-fadeInQuick"
          data-element-offset="-100">
          <div class="store-item">
            <div class="store-item-image">
              <%= link_to "#" do %>
                <%= image_tag "photo26.jpg", class: "img-responsive"%>
              <% end %>
            </div>
            <div class="store-item-info clearfix">
              <span class="store-item-price themed-color-dark pull-right"
                data-element-offset="-1000">
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star-half-o"></i>
              </span>
              <strong>
                <%= link_to t("name_coffee"), "#" %>
              </strong><br>
              <small>
                <%= t "description" %>
              </small>
            </div>
          </div>
        </div>
      </div>
      <h2 class="site-heading">
        <strong><%= t "all" %></strong>
        <%= t "coffee_shop" %>
      </h2>
      <hr>
      <div class="row store-items">
        <% @shops.each do |shop| %>
          <div class="col-md-4 shop-item" data-toggle="animation-appear"
            data-animation-class="animation-fadeInQuick"
            data-element-offset="-100">
            <div class="store-item">
              <div class="store-item-image">
                <%= link_to shop_path(shop) do %>
                  <%= image_tag shop.avatar, class: "img-responsive" %>
                <% end %>
              </div>
              <div class="store-item-info clearfix">
                <span class="store-item-price themed-color-dark pull-right"
                  data-element-offset="-1000">
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star"></i>
                  <i class="fa fa-star-half-o"></i>
                </span>
                <strong>
                  <%= link_to shop.name, shop_path(shop) %>
                </strong><br>
                <small>
                  <%= shop.description.html_safe %>
                </small>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="text-center">
      <%= will_paginate @shops %>
    </div>
  </section>
</div>
<%= link_to "#", id: "to-top" do %>
  <i class="fa fa-angle-up"></i>
<% end %>
