<div id="page-content">
  <div class="block full">
    <div class="block-title">
      <h2><strong><%= t ".categories" %> </strong><%= t ".overview" %></h2>
    </div>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <%= link_to t(".new_category"), new_admin_category_path,
          class: "btn btn-info" %>
        <hr>
        <div class="table-responsive">
          <table class="table table-vcenter table-striped">
            <tr class="display-categories">
              <th class="index text-center"><%= t".id" %></th>
              <th class="text-center"><%= t ".name" %></th>
              <th class="text-center"><%= t ".parent_id" %></th>
              <th class="text-center"><%= t ".action" %></th>
            </tr>
            <% @categories.each do |category| %>
              <tr class="display-categories">
                <td class="index text-center"><%= category.id %></td>
                <td class="text-center"><%= category.name %></td>
                <td class="text-center">
                  <% if category.parent_id.blank? %>
                    <%= t ".root" %>
                  <% else %>
                    <%= category.parent_id %>
                  <% end %>
                </td>
                <td class="text-center">
                  <%= link_to edit_admin_category_path(category),
                    class: "btn btn-default" do %>
                    <i class="fa fa-pencil-square-o"><%= t ".edit" %></i>
                  <% end %>
                  <%= link_to admin_category_path(category), method: :delete,
                    data: {confirm: t("sure")}, class: "btn btn-danger" do %>
                    <i class="fa fa-trash"><%= t ".delete" %></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </table>
        </div>
        <div class="text-center">
          <%= will_paginate %>
        </div>
      </div>
    </div>
  </div>
</div>  
