<%= form_for [:shop_owner, @category], html: {multipart: true,
  class: "form-horizontal category-form", id: "category_form"} do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="control-group">
    <%= f.label :shop_name %>
    <%= f.select :shop_id, current_user.shops.collect{|ctgr| [ctgr.name, ctgr.id]},
      {}, {class: "form-control"} %>
  </div>
  <br>
  <div class="control-group">
    <%= f.label :parent_name %>
    <%= f.select :parent_id, @categories.collect{|ctgr| [ctgr.name, ctgr.id]},
      {include_blank: t(".none")}, {class: "form-control"} %>
  </div>
  <br>
  <div class="control-group">
    <%= f.label :name, t(".category_name") %>
    <div class="controls">
      <%= f.text_field :name, class: "form-control", id: "name",
        placeholder: t(".category_name") %>
    </div>
  </div>
  <br>
  <div class="form-actions add-category">
    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <%= link_to t(".cancel"), :back, class: "btn btn-default" %>
  </div>
<% end %>
