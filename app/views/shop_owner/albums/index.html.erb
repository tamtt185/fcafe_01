<div class="block full">
  <div class="block-title">
    <h2><strong><%= t ".albums" %></strong></h2>
  </div>
  <div class="row">
    <button type = "button" class = "btn btn-info" data-toggle = "modal"
      data-target = "#ModalAlbum"><%= t "new_album" %></button>
    <hr>
    <table class="table table-vcenter table-striped">
      <tr>
        <th><%= t "name" %></th>
        <th colspan="2"><%= t "action" %></th>
      </tr>
      <% @albums.each do |album| %>
        <tr>
          <td><%= album.name %></td>
          <td>
            <div class="btn-group btn-group-xs">
              <%= link_to edit_shop_owner_album_path(album),
                class: "btn btn-default" do %>
                <i class="fa fa-pencil"><%= t "edit" %></i>
              <% end %>
            </div>
          </td>
          <td>
            <%= link_to shop_owner_album_path(album), method: :delete,
              data: {confirm: t("sure")}, class: "btn btn-danger" do %>
              <i class="fa fa-times"><%= t "delete" %></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
    <div id = "ModalAlbum" class = "modal fade" role = "dialog">
      <div class = "modal-dialog modal-lg">
        <div class = "modal-content">
          <%= render "form_album" %>
          <div class = "modal-footer">
            <button type = button" class = "btn btn-default"
              data-dismiss = "modal"><%= t "close" %></button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
