<section class="site-content site-section">
  <% if params[:action] == Settings.action_edit %>
    <h3 class="col-md-6 col-md-offset-3"><%= t ".edit_table" %></h3>
  <% else %>
    <h3 class="center"><%= t ".add_table" %></h3>
  <% end %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for [:shop_owner, @table] do |f| %>
        <%= render "shared/error_messages", object: f.object %>
        <%= f.label :name %>
        <%= f.text_field :name, required: true %><br >

        <%= f.label :location %>
        <%= f.text_field :location, required: true %><br >

        <%= f.label :number_chair %>
        <%= f.number_field :num_chair, min: Settings.one, required: true %><br >

        <%= f.label :avatar %>
        <%= f.file_field :avatar %><br >

        <% if params[:action] == Settings.action_edit %>
          <%= f.submit t("save"), class: "btn btn-primary" %>
        <% else %>
          <%= f.hidden_field :shop_id, value: @shop.id %>

          <%= f.submit t("add"), class: "btn btn-primary" %>
        <% end %>
      <% end %>
    </div>
  </div>
</section>
